<!--index.wxml-->
<view class="container">
  <!-- danmu-list:弹幕列表  danmu-btn:显示弹幕按钮  enable-danmu:默认打开弹幕
{{}}数据的双向绑定，用于联系js中的数据 -->
    <video id='myVideo' src='http://oo9wq61n2.bkt.clouddn.com/Jay' danmu-list='{{danmuList}}' danmu-btn='true' enable-danmu='true'></video>
    <!-- 输入框 
    bindblur:输入框失去焦点时调用
    placeholder:输入框为空时用来占位显示
    -->
    <input bindblur='bindInputBlur' placeholder='吐槽吧'></input>

    <!-- 按钮 -->
    <button bindtap='sendDanmu'>Boom</button>

</view>